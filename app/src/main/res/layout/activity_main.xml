<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/buttonStartComposeActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_compose_activity" />

    <TextView
        android:id="@+id/textViewComposeActivityResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="16sp"
        android:visibility="invisible"
        tools:text="@string/result_from_compose_activity"
        tools:visibility="visible" />

    <Button
        android:id="@+id/button_start_timer_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_timer_service" />

    <Button
        android:id="@+id/button_bind_timer_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bind_timer_service" />

    <Button
        android:id="@+id/button_start_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_timer"
        android:visibility="gone" />

</LinearLayout>
